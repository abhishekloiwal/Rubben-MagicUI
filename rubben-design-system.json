{
  "designSystem": {
    "name": "Rubben Design System",
    "version": "1.0.0",
    "description": "Comprehensive design system for Rubben - AI-Powered Investor Intelligence Platform",
    "lastUpdated": "2024-01-17"
  },
  "colors": {
    "primitives": {
      "light": {
        "background": "#FAFAFA",
        "foreground": "#0A0A0A",
        "card": "#FFFFFF",
        "cardForeground": "#0A0A0A",
        "popover": "#FFFFFF",
        "popoverForeground": "#0A0A0A",
        "primary": "#171717",
        "primaryForeground": "#FAFAFA",
        "secondary": "#2B7FFF",
        "secondaryForeground": "#171717",
        "muted": "#F5F5F5",
        "mutedForeground": "#737373",
        "accent": "#FFFFFF",
        "accentForeground": "#F5F5F5",
        "destructive": "#DC2626",
        "destructiveForeground": "#DC2626",
        "border": "#E5E5E5",
        "input": "#E5E5E5",
        "ring": "#A3A3A3"
      },
      "dark": {
        "background": "#18181B",
        "foreground": "#FAFAFA",
        "card": "#0A0A0A",
        "cardForeground": "#FAFAFA",
        "popover": "#0A0A0A",
        "popoverForeground": "#FAFAFA",
        "primary": "#FAFAFA",
        "primaryForeground": "#171717",
        "secondary": "#2B7FFF",
        "secondaryForeground": "#FAFAFA",
        "muted": "#262626",
        "mutedForeground": "#A3A3A3",
        "accent": "#27272A",
        "accentForeground": "#FAFAFA",
        "destructive": "#7F1D1D",
        "destructiveForeground": "#EF4444",
        "border": "#262626",
        "input": "#262626",
        "ring": "#525252"
      }
    },
    "semantic": {
      "brandColors": {
        "primary": "var(--secondary)",
        "primaryHover": "opacity-80",
        "primaryActive": "opacity-90"
      },
      "statusColors": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "var(--destructive)",
        "info": "var(--secondary)"
      },
      "integrationBrands": {
        "notion": "#000000",
        "slack": "#4A154B",
        "gmail": "#EA4335",
        "salesforce": "#00A1E0",
        "teams": "#6264A7",
        "hubspot": "#FF7A59",
        "preqin": "#003D5B",
        "pitchbook": "#2E3192"
      }
    },
    "application": {
      "cards": {
        "background": "var(--card)",
        "border": "var(--border)",
        "foreground": "var(--card-foreground)",
        "shadow": "shadow-sm"
      },
      "buttons": {
        "primary": {
          "background": "var(--primary)",
          "text": "var(--primary-foreground)",
          "hover": "opacity-90",
          "shadow": "shadow-xs"
        },
        "secondary": {
          "background": "var(--secondary)",
          "text": "var(--secondary-foreground)",
          "hover": "opacity-80",
          "shadow": "shadow-xs"
        },
        "outline": {
          "background": "var(--background)",
          "border": "var(--input)",
          "text": "var(--foreground)",
          "hover": "var(--accent)",
          "shadow": "shadow-xs"
        },
        "ghost": {
          "background": "transparent",
          "text": "var(--foreground)",
          "hover": "var(--accent)"
        }
      },
      "navigation": {
        "background": "var(--background)",
        "border": "var(--border)",
        "activeItem": "var(--secondary)",
        "hoverItem": "var(--accent)"
      },
      "forms": {
        "input": {
          "background": "var(--background)",
          "border": "var(--input)",
          "text": "var(--foreground)",
          "placeholder": "var(--muted-foreground)",
          "focus": "var(--ring)"
        }
      }
    }
  },
  "typography": {
    "fontFamilies": {
      "sans": "var(--font-geist-sans)",
      "mono": "var(--font-geist-mono)"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeights": {
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625"
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    },
    "textStyles": {
      "heading1": {
        "fontSize": "3xl md:4xl",
        "fontWeight": "medium",
        "letterSpacing": "tighter",
        "lineHeight": "tight"
      },
      "heading2": {
        "fontSize": "2xl md:3xl",
        "fontWeight": "medium",
        "letterSpacing": "tighter",
        "lineHeight": "tight"
      },
      "body": {
        "fontSize": "base",
        "fontWeight": "normal",
        "lineHeight": "normal"
      },
      "caption": {
        "fontSize": "sm",
        "fontWeight": "normal",
        "lineHeight": "normal",
        "color": "var(--muted-foreground)"
      }
    }
  },
  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "containerPadding": {
      "mobile": "1rem",
      "tablet": "2rem",
      "desktop": "2.5rem"
    }
  },
  "borderRadius": {
    "none": "0",
    "sm": "calc(var(--radius) - 4px)",
    "md": "calc(var(--radius) - 2px)",
    "base": "var(--radius)",
    "lg": "var(--radius)",
    "xl": "calc(var(--radius) + 4px)",
    "full": "9999px",
    "defaults": {
      "buttons": "rounded-md",
      "cards": "rounded-lg",
      "inputs": "rounded-md",
      "badges": "rounded-full",
      "avatars": "rounded-full"
    }
  },
  "shadows": {
    "xs": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "sm": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
    "custom": {
      "integrationIcon": "shadow-lg",
      "tooltipBox": "0px_1.1px_0px_0px_rgba(255,255,255,0.20)_inset,0px_4.4px_6.6px_0px_rgba(255,255,255,0.01)_inset,0px_2.2px_6.6px_0px_rgba(18,43,105,0.04),0px_1.1px_2.2px_0px_rgba(18,43,105,0.08),0px_0px_0px_1.1px_rgba(18,43,105,0.08)",
      "calendarTime": "0px_2.2px_6.6px_0px_rgba(18,43,105,0.04),0px_1.1px_2.2px_0px_rgba(18,43,105,0.08),0px_0px_0px_1.1px_rgba(18,43,105,0.08),0px_1.1px_0px_0px_rgba(255,255,255,0.20)_inset,0px_4.4px_6.6px_0px_rgba(255,255,255,0.01)_inset",
      "calendarEvent": "0px_9px_5px_0px_#00000005,0px_4px_4px_0px_#00000009,0px_1px_2px_0px_#00000010"
    }
  },
  "animations": {
    "durations": {
      "instant": "0ms",
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "slower": "700ms",
      "slowest": "1000ms"
    },
    "easings": {
      "linear": "linear",
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out",
      "spring": "cubic-bezier(0.87, 0, 0.13, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "presets": {
      "fadeIn": {
        "duration": "200ms",
        "easing": "ease"
      },
      "slideIn": {
        "duration": "300ms",
        "easing": "cubic-bezier(0.87, 0, 0.13, 1)"
      },
      "scaleIn": {
        "duration": "200ms",
        "easing": "ease",
        "transform": "rotateX(-30deg) scale(0.9) to rotateX(0deg) scale(1)"
      },
      "orbit": {
        "duration": "20s",
        "easing": "linear",
        "repeat": "infinite"
      },
      "marquee": {
        "duration": "var(--duration)",
        "easing": "linear",
        "repeat": "infinite"
      }
    }
  },
  "gradients": {
    "backgroundGradients": {
      "fadeTop": "bg-gradient-to-b from-background to-transparent",
      "fadeBottom": "bg-gradient-to-t from-background to-transparent",
      "fadeOverlay": "bg-gradient-to-t from-transparent to-background from-40%",
      "accentHover": "bg-gradient-to-r from-secondary/0 via-secondary/5 to-secondary/0"
    },
    "lineGradients": {
      "verticalLine": "bg-gradient-to-b from-black dark:from-accent to-transparent",
      "chartArea": "from-[color-with-opacity(0.3)] to-[color-with-opacity(0)]"
    }
  },
  "components": {
    "button": {
      "base": "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-[color,box-shadow] disabled:pointer-events-none disabled:opacity-50",
      "focus": "outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px]",
      "sizes": {
        "default": "h-9 px-4 py-2",
        "sm": "h-8 px-3 gap-1.5",
        "lg": "h-10 px-6",
        "icon": "size-9"
      },
      "variants": {
        "default": {
          "base": "bg-primary text-primary-foreground shadow-xs",
          "hover": "hover:bg-primary/90"
        },
        "secondary": {
          "base": "bg-secondary text-secondary-foreground shadow-xs",
          "hover": "hover:bg-secondary/80"
        },
        "outline": {
          "base": "border border-input bg-background shadow-xs",
          "hover": "hover:bg-accent hover:text-accent-foreground"
        },
        "ghost": {
          "base": "",
          "hover": "hover:bg-accent hover:text-accent-foreground"
        }
      }
    },
    "card": {
      "container": {
        "base": "rounded-lg border border-border bg-card text-card-foreground",
        "padding": "p-6",
        "shadow": "shadow-sm"
      },
      "header": {
        "base": "flex flex-col space-y-1.5",
        "title": "text-lg font-semibold",
        "description": "text-sm text-muted-foreground"
      }
    },
    "integrationIcon": {
      "container": {
        "base": "flex items-center justify-center w-[52px] h-[52px] rounded-full shadow-lg",
        "background": "bg-white",
        "darkBackground": "dark:bg-white"
      },
      "icon": {
        "size": "w-7 h-7",
        "colors": {
          "default": "text-black",
          "branded": "Use specific brand color"
        }
      }
    },
    "tooltip": {
      "container": {
        "base": "absolute bg-[#1A1B25] border border-white/[0.07] text-white px-4 py-1 rounded-full h-8 flex items-center justify-center font-mono",
        "shadow": "shadow-[0px_1.1px_0px_0px_rgba(255,255,255,0.20)_inset,0px_4.4px_6.6px_0px_rgba(255,255,255,0.01)_inset,0px_2.2px_6.6px_0px_rgba(18,43,105,0.04),0px_1.1px_2.2px_0px_rgba(18,43,105,0.08),0px_0px_0px_1.1px_rgba(18,43,105,0.08)]"
      }
    },
    "badge": {
      "base": "inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-semibold transition-colors",
      "variants": {
        "default": "bg-primary text-primary-foreground",
        "secondary": "bg-secondary/15 text-secondary",
        "outline": "border border-border"
      }
    },
    "input": {
      "base": "flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm transition-colors",
      "placeholder": "placeholder:text-muted-foreground",
      "focus": "focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring",
      "disabled": "disabled:cursor-not-allowed disabled:opacity-50"
    }
  },
  "patterns": {
    "glassEffect": {
      "background": "bg-background/80",
      "backdropFilter": "backdrop-blur-sm",
      "border": "border border-white/10"
    },
    "hoverCard": {
      "base": "transition-all duration-300",
      "hover": "hover:shadow-lg hover:-translate-y-1",
      "active": "active:translate-y-0"
    },
    "fadeOverlay": {
      "top": "pointer-events-none absolute top-0 left-0 h-20 w-full bg-gradient-to-b from-background to-transparent",
      "bottom": "pointer-events-none absolute bottom-0 left-0 h-20 w-full bg-gradient-to-t from-background to-transparent"
    }
  },
  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "containerMaxWidths": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    }
  },
  "accessibility": {
    "focusRing": {
      "color": "ring-ring/50",
      "width": "ring-[3px]",
      "offset": "ring-offset-2"
    },
    "errorStates": {
      "ring": "ring-destructive/20 dark:ring-destructive/40",
      "border": "border-destructive"
    }
  }
}